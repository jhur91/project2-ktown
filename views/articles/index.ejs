<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Towns</title>
    <link rel='stylesheet' href='/stylesheets/index.css' />

</head>
<body>
  <div>
    <a href="/">Home</a> 
    <a href="/articles/new" class="brand-logo left">Add New Town</a>
  </div>
  <h1>Koreatown:</h1>
  <h2>From All-Around The World!</h2>
   
    <ul>
      <% articles.forEach(function(t) { %>
        <li>
          <% if (t.user.equals(user && user._id)) { %>

            <form action="/articles/<%= t._id %>?_method=DELETE"
              class="delete-form" method="POST">
              <button type="submit">X</button>
            </form>
          <% } %>
          <a href="/articles/<%= t.id %>"><%= t.title %></a>
          <img src="https://i.imgur.com/3H9xUt5.png" alt="Korea Town Logo">
          
        </li>
      <% }); %>
    </ul>

    
</body>
</html>