<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />

</head>

<body>
    <a href="/">Home</a>
    <a href="/articles" class="brand-logo left">Koreatowns</a>

    <h1>id show page</h1>

 
    <section id="show-page">

        <div>Title: </div>
        <div><%= articles.title %></div>
        <div>Article: </div>
        <div><%= articles.article %></div>
        <a href="/articles/<%= articles._id %>/edit">Edit Article</a>


        <h2>New Comment</h2>
        <form id="add-review-form" method="POST" action="/articles/<%= articles._id %>/comments">
            <label>Comment:</label>
            <textarea name="content"></textarea>
            <label>Interest:</label>
            <select name="rating">
              <option value="1">1</option>
              <option value="2">2</option>
              <option value="3">3</option>
              <option value="4">4</option>
              <option value="5">5</option>
            </select>
            <input type="submit" value="Add Comment">
        </form>
    </section>

    <% if (articles.comments.length) { %>
        <table>
          <thead>
            <tr>
              <th>Date</th>
              <th>Comment</th>
              <th>Interest</th>
            </tr>
          </thead>
          <tbody>
            <% let total = 0 %>
            <% articles.comments.forEach(function(c) { %>
                <% total += c.rating %>
              <tr>
                <td><%= c.createdAt.toLocaleDateString() %></td>
                <td><%= c.content %></td>
                <td><%= c.rating %></td>
              </tr>
            <% }); %>
            <tr>
              <td colspan="2"></td>
              <td><strong><%= (total / articles.comments.length).toFixed(1) %></strong></td>
            </tr>
          </tbody>
        </table>
      <% } else { %>
        <h5>No Reviews Yet</h5>
      <% } %>



